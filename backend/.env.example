// FILE: .env.example
// Copy this to .env and fill in your actual values
// ============================================================================

# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (Choose one: MongoDB or PostgreSQL)
DATABASE_URL=mongodb://localhost:27017/supply-chain
# DATABASE_URL=postgresql://username:password@localhost:5432/supply_chain
DB_TYPE=mongodb

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# Blockchain Configuration
BLOCKCHAIN_NETWORK=ethereum
# Options: ethereum, polygon, solana
BLOCKCHAIN_RPC_URL=https://rpc.ankr.com/eth_goerli
# For Ethereum/Polygon: https://rpc.ankr.com/eth or https://polygon-rpc.com
# For Solana: https://api.devnet.solana.com or https://api.mainnet-beta.solana.com
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=your_wallet_private_key_here
GAS_LIMIT=300000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=supply-chain-verification

# IPFS Configuration (Optional - for decentralized storage)
IPFS_HOST=ipfs.infura.io
IPFS_PORT=5001
IPFS_PROTOCOL=https
IPFS_PROJECT_ID=your_infura_project_id
IPFS_PROJECT_SECRET=your_infura_project_secret

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@supplychain.com

# SMS Service (Twilio - Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000
